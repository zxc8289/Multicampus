<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InsertActivity">

    <Button
            android:text="camera"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:id="@+id/cameraBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintVertical_bias="0.038"/>
    <Button
            android:text="save"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:id="@+id/saveBtn"
            app:layout_constraintTop_toTopOf="@+id/cameraBtn"
            app:layout_constraintStart_toEndOf="@+id/cameraBtn"
            android:layout_marginStart="28dp"/>

    <ImageView
            android:layout_width="421dp"
            android:layout_height="296dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            android:src="@drawable/baseball"
            app:layout_constraintTop_toBottomOf="@+id/cameraBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.502"/>

    <EditText
            android:layout_width="514dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTitle"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
    />
    <TextView
            android:text="제목"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:id="@+id/textView"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="44dp"
            android:layout_marginStart="36dp"/>
    <TextView
            android:text="이미지 경로"
            android:layout_width="168dp"
            android:layout_height="29dp"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083" app:layout_constraintVertical_bias="0.891"/>
    <TextView
            android:text="내용"
            android:layout_width="168dp"
            android:layout_height="29dp"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083" app:layout_constraintVertical_bias="0.699"/>
    <TextView
            android:layout_width="514dp"
            android:layout_height="61dp"
            android:id="@+id/imagePathText"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintVertical_bias="0.967"/>
    <EditText
            android:layout_width="514dp"
            android:layout_height="61dp"
            android:id="@+id/editContent"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintVertical_bias="0.744"/>

</androidx.constraintlayout.widget.ConstraintLayout>