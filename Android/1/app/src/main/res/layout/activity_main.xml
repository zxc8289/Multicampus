<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="456dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:textSize="40sp"
            android:text="0"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.177"
            android:id="@+id/countText"/>
    <Button
            android:text="+"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/btn_add"
            android:textSize="40sp"
            android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toTopOf="@+id/reset" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/countText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="-"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/btn_min"
            android:textSize="40sp"
            android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toTopOf="@+id/reset" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/countText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="reset"
            android:layout_width="456dp"
            android:layout_height="125dp"
            android:id="@+id/reset"
            android:layout_marginTop="257dp"
            app:layout_constraintTop_toBottomOf="@+id/countText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="set"
            android:layout_width="119dp"
            android:layout_height="85dp"
            android:id="@+id/set"
            android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.858"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="208dp"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="87dp"
            android:inputType="number"
            android:ems="10"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/number"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.009" android:layout_marginBottom="208dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>