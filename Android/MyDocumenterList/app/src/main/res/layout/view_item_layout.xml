<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#50FFFFFF"
    android:layout_margin="5dp">

    <ImageView
            android:id="@+id/pictureImage"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_marginLeft="8dp"/>

    <TextView
            android:id="@+id/contentText"
            android:layout_width="497dp"
            android:layout_height="26dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/pictureImage"
            app:layout_constraintTop_toTopOf="@+id/pictureImage"
            tools:text="주소"
    />

    <TextView
            android:id="@+id/dateText"
            android:layout_width="304dp"
            android:layout_height="22dp"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/pictureImage"
            app:layout_constraintStart_toStartOf="@+id/contentText"
            tools:text="등록날짜"/>

</androidx.constraintlayout.widget.ConstraintLayout>