<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_menu"
            android:name="com.example.smaple23.FragmentMenu"
            tools:layout="@layout/activity_fragment_menu"/>

    <FrameLayout android:layout_width="603dp"
                 android:layout_height="880dp"
                 android:id="@+id/content"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="@+id/fragment_menu"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.0">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>